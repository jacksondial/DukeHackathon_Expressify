{
    "name": "Expressify",
    "version": "1.0",
    "description": "Expressify",
    "author": "expressifiers",
    "homepage_url": "https://github.com/expressify",
    "permissions": ["tabs", "scripting", "storage", "declarativeContent"],
    "host_permissions": ["https://*.netflix.com/", "https://*.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "logo.png"
    },
    "manifest_version": 3
  }